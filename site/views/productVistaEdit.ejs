<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %> 
<body>
    <%- include('partials/header') %> 
    <section class="principal">
        <div class="container">
            <div class="row">
              <div class="col-12 titulo">
                <h2><%= title %></h2>
              </div>
    
              <% productos.forEach(producto => { %>
     
                <div class="container destacados">
                    <div class="row">
                        <div class="col-md-4 col-12 ">
                            <div class="card ">
                                <img class="card-img-top" src="/images/products/<%= producto.image %>" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title"><%= producto.name %></h5>
        
                        
                                </div>
                                 <!--edicion-->
                                 
                        <div class="d-flex justify-content-around">
                            <form action="/products/detalle/<%= producto.id %>" method="GET">
                                <button class="btn btn-outline-light">
                                    <h4 class="fas fa-info-circle text-info"></h4>
                                </button>
                            </form>
                            <form action="/products/show/<%= producto.id %>" method="GET">
                                <button class="btn btn-outline-light">
                                    <h4 class="fas fa-edit text-primary"></h4>
                                </button>
                            </form>
                            <form action="/products/delete/<%= producto.id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-outline-light" type="submit">
                                    <h4 class="fas fa-trash-alt text-danger"></h4>
                                </button>
                            </form>
                        </div>
                 

                            </div>
                        
                           
                        </div>
                        
        
                    </div>
                </div>
              <% }) %>
              
            </div>

            
            </div>
        </div>
      </section>
    <%- include('partials/footer') %> 

</body>
</html>