<%-include("./partials/head.ejs") %> 
<%-include("./partials/header.ejs") %> 

<body>
    <!--carrousel-->
    <section id="main">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-pause="false">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/12 cuotas sin interes.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/Diseño con título.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/Envio a domicilio.png" alt="Third slide">
                </div>
            </div>

        </div>
    </section>
    <!--/carrousel-->

    <!--destacados-->
    <section id="destacados" class="mt-4">
        <div class="container">
            <div>
                <div class="col-12 titulo">
                    <h2>LO MAS</h2>
                    <h2>DESTACADO</h2>
                </div>
            </div>
            
            <div class="row ">
                <% productos.forEach(producto => { %> 
                                
                
                <div class=" col-12 col-md-6 col-lg-4 card justify-content-center justify-content-md-start">
                    <div class="caja ">
                        <div>
                            <img class="card-img-top medida" src="/images/products/<%= producto.imagen %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"><%= producto.nombre %></h5>

                            <a href="/products/detalle/<%= producto.id %> " class="btn btn-outline-danger">VER</a>
                        </div>
                        </div>
                    </div>

                
                </div>
                 <% }) %>
            </div>
        </div>
    </section>
    <!--/destacados-->

    <!--medio-->
    <div class="container">
        <div class="row text-center">
            <div class="col-12 col-lg">
                <li class="text-danger redes">VENTA TELEFONICA</li>
                <p class="p-negro">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
            </div>

            <div class="col-12 col-lg">
                <li href="#" class="text-danger redes">NUESTRAS REDES</li>
                <p class="p-negro">Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
            </div>

            <div class="col-12 col-lg">
                <li href="#" class="text-danger redes">HORARIOS</li>
                <p class="p-negro">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
            </div>
        </div>
    </div>
    <!--/medio-->

    <!--formulario-->
    <section id="form" class="mt-4">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <small>Queres estar al tanto de todas las novedades?</small>
                    <h2>SUSCRIBITE A NUESTRO NEWSLETTER</h2>
                </div>
            </div>

            <div class="row">
                <div class="col col-md-10 offset-md-1 col-lg-8 offset-lg-2 pt-2">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter email">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Contraseña</label>
                            <input type="password" class="form-control" id="exampleInputPassword1"
                                placeholder="Password">
                        </div class="col col-md-8 offset-md-2">

                        <button type="button" class="btn btn-outline-danger col-12 col-sm btn-lg">SUSCRIBITE</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--/formulario-->

    <!--categorias de pc-->

    <section id="destacados" class="mt-4">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <small>Estas buscando una computadora ya armada?</small>
                    <h2>NOSOTROS LO TENEMOS</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="/images/computadoras.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">HOGAR Y EMPRESA</h5>

                            <a href="/detalleProducto" class="btn btn-outline-danger">COMPRAR</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="/images/entretenimiento.png" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">ENTRETENIMIENTO</h5>

                            <a href="/detalleProducto" class="btn btn-outline-danger">COMPRAR</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="/images/gaming.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">GAMING</h5>

                            <a href="/detalleProducto" class="btn btn-outline-danger">COMPRAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--/categorias de pc-->
    <%-include("./partials/footer.ejs") %> 
</body>

</html>