<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %> 
<body>
    <%- include('partials/header') %> 
    <section class=" conteiner-fluid principal conte">
        <div class="container">
          <div>
              <div class="col-12 titulo">
                <br><h2><%= title %></h2><br>
              </div>
    
            <div class="row cajas">   
                <% productos.forEach(producto => { %>
     
                                <div class="col-12 col-md-6 col-lg-4 card">
                                  <div>
                                  <div>
                                    <a href="/products/detalle/<%= producto.id %> "><img class="card-img-top medida" src="/images/products/<%= producto.imagen %>" alt="Card image cap"></a>
                                    <div class="card-body">
                                      <h3 class="card-title"><%= producto.nombre %></h3>
        
                                      <a href="/products/detalle/<%= producto.id %> " class="btn btn-outline-danger ver" id="ver">VER</a>
                                    </div>
                                  </div>
                                  </div>
                                </div>

        
                <% }) %>
            </div>
            
            
            </div>
        </div>
      </section>
    <%- include('partials/footer') %> 

</body>
</html>